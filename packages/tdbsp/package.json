{
  "name": "@a33/tdbsp",
  "version": "0.0.0",
  "type": "module",
  "license": "NONE",
  "description": "A typescript implementation of the DBSP language",
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "repository": {
    "type": "git",
    "url": "<PLACEHOLDER>",
    "directory": "packages/server"
  },
  "exports": {
    "./data/*": {
      "import": "./build/esm/data/*.js",
      "types": "./build/dts/data/*.d.ts"
    },
    "./examples/*": {
      "import": "./build/esm/examples/*.js",
      "types": "./build/dts/examples/*.d.ts"
    },
    "./functions/*": {
      "import": "./build/esm/functions/*.js",
      "types": "./build/dts/functions/*.d.ts"
    },
    "./objs/*": {
      "import": "./build/esm/objs/*.js",
      "types": "./build/dts/objs/*.d.ts"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "build": "pnpm build-esm && pnpm build-annotate",
    "build-esm": "tsc -b tsconfig.build.json",
    "check": "tsc -b tsconfig.json",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/platform": "latest",
    "@effect/sql": "latest",
    "effect": "latest"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.2",
    "@vitest/coverage-v8": "^3.1.3"
  }
}
